<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<!-- File(s) appended to a request for a URL that is not mapped to a web 
		component -->


	<display-name>LODVader</display-name>

	<servlet>
		<servlet-name>LinksetTimer</servlet-name>
		<servlet-class>lodVader.linksets.LinksetTimer</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	
    <servlet>
		<servlet-name>StartLODVader</servlet-name>
		<servlet-class>lodVader.StartLODVader</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
		<servlet>
		<servlet-name>API</servlet-name>
		<servlet-class>lodVader.API.server.ServiceAPI</servlet-class>
	</servlet>			
	<servlet>
		<servlet-name>ResourceTree</servlet-name>
		<servlet-class>lodVader.API.server.ResourceTree</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>CreateD3JSONFormat2</servlet-name>
		<servlet-class>lodVader.API.server.CreateD3JSONFormat</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>API</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ResourceTree</servlet-name>
		<url-pattern>/ResourceTree/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CreateD3JSONFormat2</servlet-name>
		<url-pattern>/CreateD3JSONFormat2/*</url-pattern>
	</servlet-mapping>

</web-app>